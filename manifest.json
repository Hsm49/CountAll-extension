{
    "manifest_version": 3,
    "name": "CountAll",
    "description": "Gestor de tiempo y bloqueo de sitios",
    "version": "1.0",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "action":{
        "default_popup": "popup.html",
        "default_icon":{
            "128": "icons/icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icons/icon.png"
      },
      "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
        ]
}